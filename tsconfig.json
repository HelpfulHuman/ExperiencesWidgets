{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "target": "es5",
    "outDir": "dist",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": [
      "DOM",
      "es6",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020"
    ],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "node_modules"
  ]
}